# Backend Environment Variables Template
# Copy this file to .env and fill in your values
# SECURITY: Never commit .env file to version control

# -------------------------
# Database (Supabase)
# -------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# -------------------------
# LLM APIs
# -------------------------
OPENAI_API_KEY=sk-your-openai-key-here
# Optional: For fallback or specific models
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
HUGGINGFACE_API_KEY=hf_your_huggingface_token_here

# -------------------------
# CourtListener API (Legal Data)
# -------------------------
# Get free API key from: https://www.courtlistener.com/api/
COURTLISTENER_API_TOKEN=your_courtlistener_token_here
# Rate limit: 5,000 requests/day on free tier

# -------------------------
# Whop Integration (Monetization)
# -------------------------
# Get from Whop Developer Dashboard: https://whop.com/apps
WHOP_API_KEY=your_whop_api_key_here
WHOP_WEBHOOK_SECRET=your_webhook_secret_here
WHOP_STARTER_PRODUCT_ID=prod_starter_xxx
WHOP_PROFESSIONAL_PRODUCT_ID=prod_professional_xxx
WHOP_FIRM_PRODUCT_ID=prod_firm_xxx

# -------------------------
# Email Service (SendGrid)
# -------------------------
SENDGRID_API_KEY=SG.your_sendgrid_key_here
SENDGRID_FROM_EMAIL=alerts@yourdomain.com

# -------------------------
# Server Configuration
# -------------------------
PORT=8000
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://your-frontend-domain.netlify.app
DEBUG=false

# -------------------------
# Embedding Model
# -------------------------
EMBED_MODEL_NAME=all-MiniLM-L6-v2

# -------------------------
# Security
# -------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY_HOURS=24

# -------------------------
# Feature Flags
# -------------------------
ENABLE_MOCK_DATA=false
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true
